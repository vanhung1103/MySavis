<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]Assignment</title>
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.2.0/mdb.min.css" rel="stylesheet" />
    <!-- MDB -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.2.0/mdb.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/detail.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style1.css" asp-append-version="true" />
	<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

    <script src="https://kit.fontawesome.com/0b86f48f47.js" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-primary">
            <!-- Container wrapper -->
            <div class="container-fluid">
                <!-- Toggle button -->
                <button class="navbar-toggler" type="button" data-mdb-toggle="collapse"
                    data-mdb-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fas fa-bars"></i>
                </button>
                <!-- Collapsible wrapper -->
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <!-- Navbar brand -->
                    <a class="navbar-brand mt-2 mt-lg-0" asp-controller="Product" asp-action="Index">
                        <img src="https://trungtv.azdigi.blog/images/header_logo.png" height="70" alt="Logo"
                            loading="lazy" />
                    </a>
                    
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0" style="margin-left:50px">
                        <li class="nav-link active">
                            <a style=" font-size:x-large;color:white;font-family:'Comic Sans MS'"
                                class="nav-link active" asp-controller="Home" asp-action="Index">Trang Chủ</a>
                        </li>
                        <li class="nav-link active">
                            <a style=" font-size:x-large;color:white;font-family:'Comic Sans MS'"
                                class="nav-link active" asp-controller="Post" asp-action="Show">Giới Thiệu</a>
                        </li>
                        <li class="nav-link active">
                            <a style=" font-size:x-large;color:white;font-family:'Comic Sans MS'"
                                class="nav-link active" asp-controller="Home" asp-action="ShowAllProduct">Sản Phẩm</a>
                        </li>
                     </ul>                            
                    <!-- Left links -->
                </div>
                <!-- Collapsible wrapper -->

                <!-- Right elements -->
                <div class="d-flex align-items-center" style="margin-right:50px;font-size:20px">
                    <!-- Icon -->
                    <a class="text-reset me-3" asp-controller="Cart" asp-action="ShowListCartDetails">
                        <i class="fas fa-shopping-cart" style="font-size:30px"></i>
                        <span class="badge rounded-pill badge-notification bg-danger">@ViewBag.ProductInCart</span>
                    </a>
                    <!-- Notifications -->
                    <div class="dropdown" style="margin-left:30px">
                        <a class="text-reset me-3 dropdown-toggle hidden-arrow" href="#" id="navbarDropdownMenuLink"
                            role="button" data-mdb-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-bell" style="font-size:30px"></i>
                            <span class="badge rounded-pill badge-notification bg-danger">2</span>
                        </a>
                    </div>
                    <!-- Avatar -->
                    @{
                        if(@ViewBag.User!=null){
                            <div class="dropdown" style="margin-left:30px">
                                <a class="dropdown-toggle d-flex align-items-center hidden-arrow" href="#"
                                id="navbarDropdownMenuAvatar" role="button" data-mdb-toggle="dropdown"
                                aria-expanded="false">
                            <img src="/Images/@ViewBag.Avata" class="rounded-circle " 
                                height="50" alt="Black and White Portrait of a Man" loading="lazy" />
                        </a>
                        <label style="color:wheat">
                        @ViewBag.User
                        </label>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownMenuAvatar">
                            <li>
                                        <a class="dropdown-item" href="/User/Update">My profile</a>

                            </li>
                            <li>
                                <a class="dropdown-item" href="#">Settings</a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/Login/LogOut">Logout</a>
                            </li>
                        </ul>
                    </div>
                    }
                    else
                    {
                    <div class="dropdown" style="margin-left:30px">
                        <a class="dropdown-toggle d-flex align-items-center hidden-arrow" href="/Login/Login"role="button">
                            <img src="https://ss-images.saostar.vn/wwebp700/pc/1613810558698/Facebook-Avatar_3.png"
                                class="rounded-circle" height="50" alt="Black and White Portrait of a Man"
                                loading="lazy" />
                        </a>
                        <a style="text-decoration:none;color:wheat" href="/Login/Login">Login</a>
                    </div>
                    }
                    }
                </div>
                <!-- Right elements -->
            </div>
            <!-- Container wrapper -->
        </nav>
        <!-- Navbar -->
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
            <script src="https://uhchat.net/code.php?f=429757"></script>
        </main>
    </div>

    <!-- Footer -->
    <footer class="text-center text-lg-start bg-light text-muted" >
        <!-- Section: Social media -->
        <section class="d-flex justify-content-center justify-content-lg-between p-4 border-bottom">
            <!-- Left -->

            <!-- Right -->
            <div>
                <a href="" class="me-4 text-reset">
                    <i class="fab fa-facebook-f"></i>
                </a>
                <a href="" class="me-4 text-reset">
                    <i class="fab fa-twitter"></i>
                </a>
                <a href="" class="me-4 text-reset">
