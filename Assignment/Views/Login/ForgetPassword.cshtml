@model Assignment.Models.User
@{
Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        body,
        .signin {
            background-color: #d3d3d3;
            font-family: 'Montserrat', sans-serif;
            color: #fff;
            font-size: 14px;
            letter-spacing: 1px;
        }

        body {
            background-image: url("https://mega.com.vn/media/news/0106_hinh-nen-4k-may-tinh11.jpg");
        }

        .login {
            position: relative;
            height: 560px;
            width: 405px;
            margin: auto;
            padding: 60px 60px;
            background: url(https://phongvu.vn/cong-nghe/wp-content/uploads/2018/07/tong-hop-anh-nen-laptop-toi-uu-cho-cong-viec-va-bao-ve-mat-8.jpg) no-repeat center center #505050;
            background-size: cover;
            box-shadow: 0px 30px 60px -5px #000;
        }

        form {
            padding-top: 80px;
        }

        .active {
            border-bottom: 2px solid #1161ed;
            color: white;
            position: relative;
            text-decoration: none;
            color: white;
            font-size:20px;
        }

        .nonactive {
            border-bottom: 2px solid #1161ed;
            opacity: 0.7;
            color: white;
            position: relative;
            text-decoration: none;
            color: white;
        }

        h2 {
            padding-left: 12px;
            font-size: 22px;
            text-transform: uppercase;
            padding-bottom: 5px;
            letter-spacing: 2px;
            display: inline-block;
            font-weight: 100;
        }

        h2:first-child {
            padding-left: 0px;
        }

        p {
            text-transform: uppercase;
            font-size: 15px;
            opacity: 1;
            display: inline-block;
            position: relative;
            top: -65px;
            transition: all 0.5s ease-in-out;
        }

        .text {
            border: none;
            width: 89%;
            padding: 10px 20px;
            display: block;
            height: 15px;
            border-radius: 20px;
            background: rgba(255, 255, 255, 0.1);
            border: 2px solid rgba(255, 255, 255, 0);
            overflow: hidden;
            margin-top: 15px;
            transition: all 0.5s ease-in-out;
        }

        .text:focus {
            outline: 0;
            border: 2px solid rgba(255, 255, 255, 0.5);
            border-radius: 20px;
            background: rgba(0, 0, 0, 0);
        }

        .text:focus+p {
            opacity: 0.6;
        }

        input[type="text"],
        input[type="password"] {
            font-family: 'Montserrat', sans-serif;
            color: #fff;
        }
        input {
            display: inline-block;
            padding-top: 20px;
            font-size: 14px;
        }
        h2,
        p,
        .custom-checkbox {
            margin-left: 20px;
        }
        .custom-checkbox {
            -webkit-appearance: none;
            background-color: rgba(255, 255, 255, 0.1);
            padding: 8px;
            border-radius: 2px;
            display: inline-block;
            position: relative;
            top: 6px;
        }
        .custom-checkbox:checked {
            background-color: rgba(17, 97, 237, 1);
        }
        .custom-checkbox:checked:after {
            content: '\2714';
            font-size: 10px;
            position: absolute;
            top: 1px;
            left: 4px;
            color: #fff;
        }
        .custom-checkbox:focus {
            outline: none;
        }
        label {
            display: inline-block;
            padding-top: 10px;
            padding-left: 5px;
        }
        .signin {
            background-color: #1161ed;
            color: #FFF;
            width: 100%;
            padding: 10px 20px;
            display: block;
            height: 39px;
            border-radius: 20px;
            margin-top: 30px;
            transition: all 0.5s ease-in-out;
            border: none;
            text-transform: uppercase;
        }
        .signin:hover {
            background: #4082f5;
            box-shadow: 0px 4px 35px -5px #4082f5;
            cursor: pointer;
        }
        .signin:focus {
            outline: none;
        }
        hr {
            border: 1px solid rgba(255, 255, 255, 0.1);
            top: 85px;
            position: relative;
        }
        .thea {

            /*display: block;*/
            position: relative;
            text-decoration: none;
            color: white;
            font-weight:bold;
            font-size:17px;
        }
    </style>
</head>
<body>
    <link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet' type='text/css'>
    
    <div class="login">
        <a  href="/Login/Login"><h2 class="nonactive"> sign in </h2></a>
        <a href="/Login/ForgetPassword"><h2 class="active" style="text-align:center"> forget Password </h2></a>
        
        
        <form method="post"asp-action="ForgetPassword">
            <input type="text" class="text" name="username">
            <p style="color:white">username</p>
            <span asp-validation-for="Username" class="text-danger"></span>
            <br>
            <input type="text" class="text" name="name">
            <p style="color:white">name</p>
            <span asp-validation-for="Name" class="text-danger"></span>
            <br>
            <input type="text" class="text" name="numberphone">
            <p style="color:white">numberphones</p>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            <br>
            <h3 style="color:red">@TempData["error"]</h3>
            <input type="checkbox" id="checkbox-1-1" class="custom-checkbox" />
            <label for="checkbox-1-1">I'm not robot</label>
            <button type="submit" class="signin">
                Forget Password
            </button>
        </form>
    </div>
</body>

</html>